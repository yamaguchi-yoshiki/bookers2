<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <% if @user.errors.any? %>
        <ul class="alert alert-danger" role="alert">
          <h3 class="alert-heading">
            <%= @user.errors.count %> errors prohibited this obj from being saved:
          </h3>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @user do |f| %>
        <div class="form_group mb-3">
          <label>Name</label><br>
          <%= f.text_field :name, autofocus: true, class:"form-control", placeholder: "Name" %>
        </div>
        <div class="form_group mb-3">
          <label>Image</label><br>
          <%= f.file_field :profile_image, placeholder: "ProfileImage", accept: "image/*" %>
        </div>
        <div class="form_group mb-3">
          <label>Introduction</label><br>
          <%= f.text_area :introduction, class:"form-control", placeholder: "Introduction" %>
        </div>
        <div class="form_group mb-3">
          <%= f.submit 'Update User', class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
