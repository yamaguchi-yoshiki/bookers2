<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <ul class="alert alert-danger" role="alert">
          <h3 class="alert-heading">
            <%= @book.errors.count %> errors prohibited this obj from being saved:
          </h3>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
        <div class="form_group mb-3">
          <label>Title</label><br>
          <%= f.text_field :title, autofocus: true, class:"form-control", placeholder:"Title" %>
        </div>
        <div class="form_group mb-3">
          <label>Opinion</label><br>
          <%= f.text_area :body, class:"form-control", placeholder:"Body" %>
        </div>
        <div class="form_group mb-3">
          <%= f.submit 'Update Book', class:"btn btn-success" %>
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book.id) %>
       |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>
